---
import BaseLayout from '../components/base-layout.astro';
import Hero from '../components/hero.astro';
import Features from '../components/features/index.astro';
import { SupportedBrowsers } from '../components/browser-support.tsx';
import '../components/tailwind.css';
---

<BaseLayout
  title="The Ultimate Cross-Origin Solution for Web Apps"
  description="Browser App Cors simplifies cross-origin request management with powerful tools for users and developers, combining a browser extension and an npm package. Secure, efficient, and easy to use."
  isHomepage
>
  <Hero />
  <Features />
  
  <!-- Browser Compatibility Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SupportedBrowsers client:load />
    </div>
  </section>
</BaseLayout>
