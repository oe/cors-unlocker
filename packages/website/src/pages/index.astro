---
import BaseLayout from '../components/base-layout.astro';
import Hero from '../components/hero.astro';
import CostComparison from '../components/cost-comparison.astro';
import IntegrationGuide from '../components/integration-guide.astro';
import UseCases from '../components/use-cases.astro';
import Features from '../components/features/index.astro';
import { SupportedBrowsers } from '../components/browser-support.tsx';
import '../components/tailwind.css';
---

<BaseLayout
  title="Enable Cross-Origin Requests Without Any Server - CORS Unlocker"
  description="Enable cross-origin requests directly in your browser. No proxy servers, no infrastructure costs. Free browser extension for seamless API integration."
  isHomepage
>
  <Hero />
  <CostComparison />
  <IntegrationGuide />
  <UseCases />
  <Features />
  
  <!-- Browser Compatibility Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SupportedBrowsers client:load />
    </div>
  </section>
</BaseLayout>
