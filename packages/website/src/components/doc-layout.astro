---
import BaseLayout from './base-layout.astro';
interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}
const { frontmatter } = Astro.props;
---

<BaseLayout frontmatter={frontmatter}>
  <style is:global>
    summary {
      cursor: pointer;
    }
    details > p:first-child:empty {
      display: none;
    }

    details + details {
      margin-top: 0.8rem;
    }

    summary {
      font-weight: 500;
    }
    html {
      background: linear-gradient(135deg, #a8edea, #fed6e3);
      background-attachment: fixed;
    }

    body .prose {
      --tw-prose-bullets: #666;
    }
  </style>
  <main class="container mx-auto px-4 prose py-16">
    <slot />
  </main>
  <script type="module">
    (function () {
      const hash = window.location.hash;
      if (!hash) return;
      const el = document.querySelector(hash);
      if (!el || el.tagName !== 'DETAILS') return;
      // @ts-expect-error el is a details element
      el.open = true;
    })();
  </script>
</BaseLayout>