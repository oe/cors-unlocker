---
export interface Props {
  leftTitle?: string;
  rightTitle?: string;
  leftIcon?: string;
  rightIcon?: string;
}

const { 
  leftTitle = "✅ Do", 
  rightTitle = "❌ Don't",
  leftIcon = "✅",
  rightIcon = "❌"
} = Astro.props;
---

<div class="grid md:grid-cols-2 gap-4 mb-6">
  <div class="bg-green-50 p-4 rounded-lg border border-green-200">
    <h4 class="font-semibold text-green-900 mb-2 flex items-center gap-2 !mt-0">
      <span class="text-lg">{leftIcon}</span>
      {leftTitle}
    </h4>
    <div class="text-green-800 prose-sm [&>*:first-child]:!mt-0 [&>*:last-child]:!mb-0">
      <slot name="left" />
    </div>
  </div>
  
  <div class="bg-red-50 p-4 rounded-lg border border-red-200">
    <h4 class="font-semibold text-red-900 mb-2 flex items-center gap-2 !mt-0">
      <span class="text-lg">{rightIcon}</span>
      {rightTitle}
    </h4>
    <div class="text-red-800 prose-sm [&>*:first-child]:!mt-0 [&>*:last-child]:!mb-0">
      <slot name="right" />
    </div>
  </div>
</div>
